<div class="login-page">
  <%= render "devise/shared/error_messages", resource: resource%>
  <div class="signup-container">
    <div class="signup-box">
      <h3>New User? Sign up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", placeholder: "First name" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", placeholder: "Last Name" %>
        </div>

        <div class="field">
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user-name", placeholder: "UserName" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "signup-bttn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="left-signup-container">
    <img src='<%= asset_path('alexis-brown-omeaHbEFlN4-unsplash.jpeg') %>'>
  </div>
</div>

